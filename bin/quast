#!/bin/bash

set -o errexit
set -o nounset
set -o xtrace

readonly DIR=$4
readonly REFERENCE="${DIR}/reference/${1}.fa"
readonly CONTIGS="${DIR}/contigs/${2}/contigs.fa"
readonly TMP=$(gmktemp -d)
readonly DST="${3}/${2}"

/usr/local/bin/quast.py \
  -R ${REFERENCE} \
  --min-contig 1000 \
  --output-dir ${TMP} \
  --no-plots \
  --threads 1 \
  ${CONTIGS}

mkdir -p ${DST}
cp ${TMP}/report.tsv ${DST}
