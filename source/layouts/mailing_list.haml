  %body
    .container-fluid
      .row
        %nav{:class => "navbar navbar-default", :role => "navigation"}
          .col-md-1
          .col-md-8
            = partial "navigation"
      .row
        .div{:class => "col-md-9 col-md-offset-2"}
          %h1
            .text-center
              = current_page.data['title']
          %hr
      .row
        .div{:class => "col-md-9 col-md-offset-2"}
          = yield
      .row
        .div{:class => "col-md-6 col-md-offset-3"}
          = partial "footer"
